<SarziranjeWindow>:
    name: "sarziranje"
    GridLayout:
        cols: 1

        Label:
            text: 'Zona Šaržiranja :'

        Button:
            text: "Nazad Na Glavni Meni"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"


<EkstrudiranjeWindow>:
    equipment: equipment
    name: "ekstrudiranje"
    GridLayout:
        cols: 1

        Label:
            text: 'Zona Ekstrudiranja: '

        Button:
            id: equipment
            text: "ZSK43"
            background_normal: ''
            background_color: 1, 0, 0, .5
            on_release:
                root.equipment = "ZSK43"
                app.root.current = "aktivnostiEkstruder"
                root.manager.transition.direction = "left"
                root.btn_eqpmnt_press()


        Button:
            id: equipment
            text: "APV"
            background_normal: ''
            background_color: 1, 1, 0, .5
            on_release:
                app.root.current = "aktivnostiEkstruder"
                root.manager.transition.direction = "left"
                root.equipment = "APV"
                root.btn_eqpmnt_press()


        Button:
            text: "Nazad Na Glavni Meni"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"


