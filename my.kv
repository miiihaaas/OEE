<EkstruderAktivnostiWindow>:
    name: "aktivnostiEkstruder"
    GridLayout:
        cols: 1
        Label:
            text: "Aktivnost Na" + " Ekstruderu: "

        Button:
            text: "Ekstrudiranje"
            on_release:
                app.root.current = "AktivnostEktrurdiranjeWindow"
                root.manager.transition.direction = "left"
                root.activity = "Ekstrudiranje"
                root.btn_activity_press()


        Button:
            text: "Čišćenje"
            on_release:
                app.root.current = "AktivnostCiscenjeWindow"
                root.manager.transition.direction = "left"
                root.activity = "Čišćenje"
                root.btn_activity_press()

        Button:
            text: "Čišćenje Radnog Mesta"
            on_release:
                app.root.current = "AktivnostCiscenjeRadnogMestaWindow"
                root.manager.transition.direction = "left"
                root.activity = "Čišćenje Radnog Mesta"
                root.btn_activity_press()
        Button:
            text: "Čekanje Probe Sa Mlina"
            on_release:
                app.root.current = "AktivnostCekanjeProbeSaMlinaWindow"
                root.manager.transition.direction = "left"
                root.activity = "Čekanje Probe Sa Mlina"
                root.btn_activity_press()

        Button:
            text: "Kontrola"
            on_release:
                app.root.current = "AktivnostKontrolaWindow"
                root.manager.transition.direction = "left"
                root.activity = "Kontrola"
                root.btn_activity_press()

        Button:
            text: "Kvar"
            on_release:
                app.root.current = "AktivnostKvarWindow"
                root.manager.transition.direction = "left"
                root.activity = "Kvar"
                root.btn_activity_press()

        Button:
            text: "Nema Premiksa"
            on_release:
                app.root.current = "AktivnostNemaPremiksaWindow"
                root.manager.transition.direction = "left"
                root.activity = "Nema Premiksa"
                root.btn_activity_press()
        Button:
            text: "Zagrevanje"
            on_release:
                app.root.current = "AktivnostZagrevanjeWindow"
                root.manager.transition.direction = "left"
                root.activity = "Zagrevanje"
                root.btn_activity_press()
        Button:
            text: "Nema Operatera"
            on_release:
                app.root.current = "AktivnostNemaOperateraWindow"
                root.manager.transition.direction = "left"
                root.activity = "Nema Operatera"
                root.btn_activity_press()
        GridLayout:
            cols: 2
            Button:
                text: "Nazad Na Glavni Meni"
                text_size: self.size
                halign: 'center'
                valign: 'center'
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text: "Nazad Na Zonu Ekstrudiranja"
                text_size: self.size
                halign: 'center'
                valign: 'center'
                on_release:
                    app.root.current = "ekstrudiranje"
                    root.manager.transition.direction = "right"


