<AktivnostUniverzalnaWindow>:
    id_: id_
    rn: rn
    worker_id: worker_id
    worker_id_pomocnik: worker_id_pomocnik
    last_input: lst_input
    activity: activity
    naziv: naziv
    slovo: slovo
    sarza: sarza
    komentar: komentar
    name: "AktivnostUniverzalnaWindow"
    on_enter: root.update_activity_labels()

    GridLayout:
        size_hint: .9, 1
        pos_hint: {'center_x':.5, 'center_y':.5}
        cols:1
        Label:
            id: activity
            text: root.activity.text
        Label:
            id: lst_input
            text: root.last_input.text
        Button:
            text: "Skeniraj QR Kod"
            font_size: 22
            on_release:
                root.btn_scan()
        Label:
            id: naziv
            text: "Naziv: Skeniraj QR kod"
            font_size: 22
            bold: True
            color: 1, 0, 0, 1
        GridLayout:
            cols: 4

            Label:
                id: id_
                text: "ID: "
                size_hint: root.width * 0.35, None
                font_size: 22
                bold: True
                color: 1, 0, 0, 1

            Label:
                id: rn
                text: "RN: "
                size_hint: root.width * 0.35, None
                font_size: 22
                bold: True
                color: 1, 0, 0, 1

            Label:
                id: slovo
                text: "??"
                size_hint: root.width * 0.1, None
                font_size: 22
                bold: True
                color: 1, 0, 0, 1
            Label:
                id: sarza
                text: "??"
                size_hint: root.width * 0.2, None
                font_size: 22
                bold: True
                color: 1, 0, 0, 1
        GridLayout:
            cols: 4
            Label:
                text: "ID radnika: "
                size_hint: root.width * 0.4, None
            TextInput:
                id: worker_id
                size_hint: root.width * 0.1, None
                text: ""
                halign: "center"
                valign: "center"
            Label:
                text: "ID pomoćnika: "
                size_hint: root.width * 0.4, None
            TextInput:
                id: worker_id_pomocnik
                size_hint: root.width * 0.1, None
                text: ""
                halign: "center"
                valign: "middle"
        GridLayout:
            cols: 2
            Label:
                text: "Komentar: "
                size_hint: .3, .5
            TextInput:
                id: komentar
                text: ""
                size_hint: .7, .5

        Button:
            text: "Potvrdi"
            font_size: 35
            bold: True
            background_color: (0, 1, 0, 1) if (worker_id.text != "" and id_.text != "ID: ") else (1, 0, 0, 1)
            on_release:
                root.btn_press() if (worker_id.text != "" and id_.text != "ID: " and worker_id_pomocnik.text != "") else None
        GridLayout: # Navigation bar
            cols: 3
            Button:
                text: "Nazad Na Glavni Meni"
                text_size: self.size
                halign: 'center'
                valign: 'center'
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            GridLayout:
                rows: 2
                Button:
                    text: "Nazad Na Zonu Ekstrudiranja"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    on_release:
                        app.root.current = "ekstrudiranje"
                        root.manager.transition.direction = "right"
                Button:
                    text: "Nazad Na Zonu Mlevenja"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    on_release:
                        app.root.current = "mlevenje"
                        root.manager.transition.direction = "right"

            Button:
                text: "Odabir Aktivnosti"
                text_size: self.size
                halign: 'center'
                valign: 'center'
                on_release:
                    app.root.current = "aktivnostiMlin" if (activity.text[:3] == "ACM") else "aktivnostiEkstruder"
                    root.manager.transition.direction = "right"
